@page
@model Pop_Claudia_Proiect.Pages.Menus.IndexModel

@{
    ViewData["Title"] = "Menus";
}
<style>
    body {
        background-image: url('menu1.jpg');
        background-size: cover; 
        background-position: center center;
        background-repeat: no-repeat;
    }
</style>
<h1>Menus</h1>
<div class="alert alert-info" role="alert" style="font-size: 18px; font-weight: bold;">
    The prices are in euro.
</div>
<form method="get" class="form-inline mb-4">
    <div class="input-group">
        <input type="text" name="SearchString" value="@Model.SearchString" class="form-control" placeholder="Search by name..." />
        <button type="submit" class="btn btn-primary">Search</button>
        <a asp-page="./Index" class="btn btn-secondary">Back to Full List</a>
    </div>
</form>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].Restaurant)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Menu) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Restaurant.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
